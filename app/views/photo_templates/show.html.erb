<h1>Photo details</h1>

<form action="/modify_photo/<%= @the_photo.id %>" method="post">
  <dl>
    <dt>
      Image
    </dt>
    <dd>
        <img src="<%= @the_photo.image %>">
    </dd>
    <dt>
      Caption
    </dt>
    <dd>
        <%= @the_photo.caption %>
    </dd>
     <dt>
      Owner
    </dt>
    <dd>
        <%= @the_photo.poster.username %>
    </dd>
     <dt>
      Posted
    </dt>
    <dd>
        <%= @the_photo.created_at %>
    </dd>
    <dt>
      <label for="image">Image</label>
    </dt>
    <dd>
      <input type="text" id="image" name="query_image" value="<%= @the_photo.image %>"/>
    </dd>
    <dt>
      <label for="caption">Caption</label>
    </dt>
    <dd>
      <textarea type="text" id="caption" name="query_caption" placeholder="<%= @the_photo.caption %>"></textarea>

      <button> 
        Update photo
      </button>
    </dd>
    <dt>
      Delete photo
    </dt>
    <dd>
      <a href="/delete_photo/<%= @the_photo.id %>"> 
        Delete this photo
      </a>
    </dd>
  <dl>
</form>

<h2>Comments</h2>
<table>
  <tr>
    <th>
      Commentor
    </th>
    <th>
      Comment
    </th>
    <th>
      Posted
    </th>
  </tr>
  <% @the_photo.comments.each do |comment| %>
  <tr>
    <td>
      <%= comment.commenter.username %>
    </td>
    <td>
      <%= comment.body %>
    </td>
    <td>
      <%= comment.created_at %>
    </td>
  </tr>
  <% end%>
</table>

<h3>Add a new comment</h3>

<form action="/insert_comment" method="post">
  <label for="photo_id">
        Photo ID
  </label>

  <input type="text" id="photo_id" name="query_photo_id" value="<%= @the_photo.id %>">

  <label for="author_id">
        Author ID
  </label>

  <input type="text" id="author_id" name="query_author_id" placeholder="Enter your author ID">

  <label for="comment_body">
        Comment
  </label>

  <textarea type="text" id="comment_body" name="query_comment_body" placeholder="Enter your comment..."></textarea>

  <button>
    Add comment
  </button>

</form>
